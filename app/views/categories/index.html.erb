<div class="row">

	<div class="col-sm-12">
		<div class="col-sm-7">
			<h3>Certificate Categories</h3>
		</div>

		<div class="col-sm-5" style="margin-top: 15px;">
			<%= form_for (@edit_category.blank? ? @new_category : @edit_category) do |f| %>
			<div class="col-sm-8">
				<%= f.text_field :name, placeholder: 'Category name', :class => 'form-control' %>
			</div>
			
			<div class="col-sm-4">
				<%= f.submit (@edit_category.blank? ? 'Add' : 'Update'), :class => 'btn btn-primary' %>
			</div>
			<% end %>
		</div>
	</div>

	<div class="col-sm-12">
		<div class="col-sm-offset-2 col-sm-8">
			<table class="table table-striped text-center">
				<thead>
    				<tr>
      					<th class="text-center">Name</th>
      					<th class="text-center">Certificates</th>
      					<th></th>
    				</tr>
  				</thead>
  				<tbody>
    				<% @categories.each do |category| %>
						<tr>
							<td><%= category.name %></td>
							<td><%= category.certificates.size %></td>
							<td>
								<%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-primary' %>
								<%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are you sure to delete?"}, :class => 'btn btn-danger' %></td>
							</tr>
					<% end %>
  				</tbody>
			</table>
		</div>
	</div>


</div>
