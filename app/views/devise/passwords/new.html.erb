<div class="container">
   <div id="login-row" class="row justify-content-center align-items-center">
     <div id="login-column" class="col-sm-4 col-sm-offset-4">
         <h3 class="text-center text-info">Forgot your password?</h3>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          	<%= render "devise/shared/error_messages", resource: resource %>

          	<div class="form-group">
             <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', :class => 'form-control' %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "Send reset password instructions", :class => 'btn btn-primary' %>
            </div>
          <% end %>

          <div id="register-link" class="text-center">
          	<%= link_to 'Back', login_path %>
          </div>
       
      </div>
    </div>
</div>
