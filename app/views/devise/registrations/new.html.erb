<div class="container">
  <div class="row">
    <h3>Add User</h3>

    <div class="col-sm-offset-4 col-sm-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :first_name do %>
            First name<span class="required">*</span>
          <% end %>
          <%= f.text_field :first_name, autofocus: true, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :middle_name do %>
            Middle name<span class="required">*</span>
          <% end %>
          <%= f.text_field :middle_name, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :last_name do %>
            Last name<span class="required">*</span>
          <% end %>
          <%= f.text_field :last_name, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email do %>
            Email<span class="required">*</span>
          <% end %>
          <%= f.email_field :email, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :business_unit_id do %>
            Business Unit<span class="required">*</span>
          <% end %>
          <%= f.collection_select(:business_unit_id, BusinessUnit.all.order('name'), :id, :name, {:prompt => 'Select Dev'}, {:class=>'form-control'}) %>
        </div>

        <div class="form-group">
          <%= f.check_box :isAdmin %>
          <%= f.label :isAdmin, 'Set as Admin' %>
        </div>


        <!--
        <div class="field">
          <%#= f.label :email %>
          <%#= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%#= f.label :password %>
          <%# if @minimum_password_length %>
          <em>(<#%= @minimum_password_length %> characters minimum)</em>
          <%# end %><br />
          <%#= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%#= f.label :password_confirmation %><br />
          <%#= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      -->

        <div class="form-group text-center">
          <%= f.submit "Submit", :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>

  </div>
</div>




