<div class="row">

    <div class="col-md-4">
    	<div class="panel">
    		<div class="panel-heading clearfix">
				<h4 class="panel-title pull-left">My Certificates</h4>
			</div>

			<div class="panel-body">

				<div class="panel panel-info">
					<div class="panel-heading">On Wishlist</div>
					<div class="panel-body">
						<% if @onWish.size == 0 %>
  							<center>No data to display.</center>
 						<% else %>
  							<% @onWish.each do |record|%>
        						<li><%= link_to record.certificate.name, certificate_path(record.certificate), style: 'color:#000000;' %></li>
 							<% end %>
						<% end %>
					</div>
				</div>
				
				<div class="panel panel-default">
					<div class="panel-heading clearfix">Ongoing</div>
					<div class="panel-body">
						<% if @ongoing.size == 0 %>
  							<center>No data to display.</center>
 						<% else %>
  							<% @ongoing.each do |record|%>
        						<li><%= link_to record.certificate.name, certificate_path(record.certificate), style: 'color:#000000;' %></li>
 							<% end %>
						<% end %>
					</div>		
				</div>
							
				<div class="panel panel-warning">
					<div class="panel-heading">Taken</div>
					<div class="panel-body">
						<% if @taken.size == 0 %>
  							<center>No data to display.</center>
 						<% else %>
  							<% @taken.each do |record|%>
        						<li><%= link_to record.certificate.name, certificate_path(record.certificate), style: 'color:#000000;' %></li>
 							<% end %>
						<% end %>
					</div>
				</div>

				<div class="panel panel-success">
					<div class="panel-heading">Passed</div>
					<div class="panel-body">
						<% if @passed.size == 0 %>
  							<center>No data to display.</center>
 						<% else %>
  							<% @passed.each do |record|%>
        						<li><%= link_to record.certificate.name, certificate_path(record.certificate), style: 'color:#000000;' %></li>
 							<% end %>
						<% end %>
					</div>
				</div>

			</div>

		</div>
	</div>

	<div class="col-md-8" style="margin-top: 15px">
		<div class="panel panel-default">
			<div class="panel-heading text-center">
				<%= current_user.isAdmin? ? "FY Targets" : "Top 5 Certifications" %>
			</div>
			<div class="panel-body">
				<% if current_user.isAdmin? %>
					<div class="col-sm-12">
						<div class="col-sm-2">
							<%= form_tag authenticated_root_path, method: "get", id: "filter" do %>
  								<%= select_tag :selected_fy, options_for_select((Time.now.year).downto(Time.now.year - 100).to_a, :selected => params[:selected_fy]), :class => 'form-control', :onchange => 'this.form.submit();' %>
 							<% end %>
						</div>
					</div>

					<div class="col-sm-12">
						<%= bar_chart [
							{name: "target", data: @targets.group(:name).sum(:target_passers)},
							{name: "actual passers", data: @fy_passers.joins(:certificate).group(:name).count}
						], xtitle: "No. of Passers",  messages: {empty: "No data"}, width: "730px" %>
					</div>
				<% else %>
					<%= bar_chart @top_certs, width: "730px", xtitle: "No. of Certified Users",  messages: {empty: "No data"} %>
				<% end %>
				
			</div>
		</div>
	</div>
	
</div>
 

