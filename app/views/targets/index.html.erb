<div class="row">
	<div class="col-sm-12">
		<div class="col-md-4">
			<h3>Target Certifications for FY</h3>
		</div>
		<div class="col-md-2" style="margin-top: 15px">
			<%= form_tag targets_path, method: "get", id: "filter" do %>
				<%= select_year(Date.today, {start_year: 1992, end_year: Date.today.year}, {:id => 'year', :class => 'form-control', :onchange =>'this.form.submit()'}) %>
  	<%#= select_tag :status, options_for_select([['All'], ['Ongoing'], ['Taken'], ['Passed']], :selected => params[:status]), :class => 'form-control', :onchange => 'this.form.submit();' %>
 			<% end %>
			
		</div>

		<div class="col-md-2 pull-right" style="margin-top: 15px;">
			<%= link_to 'Add Target', new_target_path, :class => 'btn btn-primary' %>
		</div>
	</div>



		<div class="col-sm-12">
			<br>
			<div class="col-sm-offset-2 col-sm-8">
			<table class="table table-striped text-center">
				<thead>
    			<tr>
      			<th class="text-center">Certification</th>
      			<th class="text-center"># of Users</th>
      			<th></th>
    			</tr>
  			</thead>
  			<tbody>
    			<% @target_certifications.each do |target| %>
    				<tr>
    					<td><%= target.certificate.name %></td>
    					<td><%= target.target_passers %></td>
    				</tr>
    			<% end %>
  			</tbody>
			</table>
		</div>
		</div>
</div>