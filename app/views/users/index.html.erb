<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h3>Users</h3>
			<%= link_to 'Add User', new_user_registration_path, :class => 'btn btn-success' %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<%= form_for_filterrific @filterrific do |f| %>
  				<div class="col-sm-4">
  					<div class="form-group">
  						<%= f.label 'Search' %>
    					<%# give the search field the 'filterrific-periodically-observed' class for live updates %>
    					<%= f.text_field(:search_query, class: "filterrific-periodically-observed form-control") %>
  					</div>
  				</div>

  				<div class="col-sm-4">
  					<div class="form-group">
  						<%= f.label(:with_business_unit_id, 'BU') %>
    					<%= f.select(:with_business_unit_id, @filterrific.select_options[:with_business_unit_id], { include_blank: '- All -' }, {:class => "form-control"}) %>
  					</div>
  				</div>
  
  				<div class="col-sm-4">
  					<div class="form-group" style="margin-top: 23px">
    					<%#= f.submit 'Filter', :class => "btn btn-default" %>
    					<%= link_to 'Reset filters', reset_filterrific_url, :class => "btn btn-default" %>
    				</div>
  				</div>

			<% end %>

		</div>
	</div>

	<div class="text-center">
		<%# add an automated spinner to your form when the list is refreshed %>
  		<%= render_filterrific_spinner %>
	</div>


	<div class="row">
		<%= render(
 			partial: 'users/list',
  			locals: { users: @users }
		) %>
	</div>

</div>